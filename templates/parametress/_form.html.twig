<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-body">
          {{ form_start(form) }}
            <div class="form-group">
              {{ form_row(form.loisires, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Loisirs'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.facebook, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Facebook'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.linkidin, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'LinkedIn',}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.twitter, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Twitter',}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.git, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'GitHub',}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.paragraphe, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Saisir un paragraphe',}}) }}
            </div>
            <button class="btn btn-lg btn-primary">{{ button_label|default('Save') }}</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
