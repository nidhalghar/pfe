{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Parametres index{% endblock %}

{% block body %}
    <div class="container-fluid">
  <h1 class="text-center mb-5">Parametres</h1>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Loisires</th>
            <th>Facebook</th>
            <th>Paragraphe</th>
            <th>Linkidin</th>
            <th>Twitter</th>
            <th>Git</th>
            <th>LinkPublic</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for parametre in parametres %}
            <tr>
              <td>{{ parametre.id }}</td>
              <td>{{ parametre.loisires }}</td>
              <td>{{ parametre.facebook }}</td>
              <td>{{ parametre.paragraphe }}</td>
              <td>{{ parametre.linkidin }}</td>
              <td>{{ parametre.twitter }}</td>
              <td>{{ parametre.git }}</td>
              <td>{{ parametre.linkPublic }}</td>
              <td>
                <a href="{{ path('app_parametress_show', {'id': parametre.id}) }}" class="btn btn-info btn-sm">
                  <i class="fas fa-eye"></i> Show
                </a>
                <a href="{{ path('app_parametress_edit', {'id': parametre.id}) }}" class="btn btn-primary btn-sm">
                  <i class="fas fa-edit"></i> Edit
                </a>
                <form method="post" action="{{ path('app_parametress_delete', {'id': parametre.id}) }}" class="d-inline-block">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parametre.id) }}">
                  <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="fas fa-trash-alt"></i> Delete
                  </button>
                </form>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="9">No records found.</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

      <a href="{{ path('app_parametres') }}" class="btn btn-success">
        <i class="fas fa-plus"></i> Create New
      </a>
    </div>
  </div>
</div>

{% endblock %}
