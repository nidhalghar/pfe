{% extends 'base.candidat.html.twig' %}

{% block title %}Hello ParametresController!{% endblock %}
{% block stylesheets %} 
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .fixed-form {
    position: fixed;
    top: 0;
    right: 35%;
    bottom: 0;
    width: 50%;
    padding: 100px;
    overflow-y: auto;
}
</style>
{% endblock %}
{% block javascripts %}
  
{% endblock %}
{% block image %}{{asset(user.image)}}{% endblock %}
{% block body %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-7 border-right">
      <!-- Deuxième partie de l'écran -->
      <div class="form-container fixed-form">
        <h2>Parametres</h2>
         {{ form_start(parametresForm) }}
           <div class="form-group">
             {{ form_row(parametresForm.loisires, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'loisires'}}) }}
           </div>
           <div class="form-group">
             {{ form_row(parametresForm.facebook, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'facebook'}}) }}
           </div>
            <div class="form-group">
             {{ form_row(parametresForm.linkidin, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'linkidin',}}) }}
           </div>
            <div class="form-group">
             {{ form_row(parametresForm.twitter, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'twitter',}}) }}
           </div>
            <div class="form-group">
             {{ form_row(parametresForm.git, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'git',}}) }}
           </div>
           <div class="form-group">
             {{ form_row(parametresForm.paragraphe, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'saisir une paraghraphe',}}) }}
           </div>
            <div class="form-group">
             {{ form_row(parametresForm.linkPublic, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'saisir le linkPublic',}}) }}
           </div>
           <div class="form-group">
             {{ form_row(parametresForm.Cv, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'saisir le lien de votre Cv',}}) }}
           </div>
            <div class="form-group">
                                {{ form_label(parametresForm.photo, 'Photo') }}
                                <div class="input-group">
                                    <div class="custom-file">
                                        {{ form_widget(parametresForm.photo, {'attr': {'class': 'custom-file-input', 'id': 'photo-input', 'aria-describedby': 'photo-label', 'accept': 'image/*'}}) }}
                                        <label class="custom-file-label" for="photo-input">Choisissez une photo de profil</label>
                                    </div>
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="photo-label"><i class="fa fa-upload"></i></span>
                                    </div>
                                </div>
                            </div>
           <button type="submit" class="btn btn-lg btn-primary">Ajouter</button>
            <br>
         {{ form_end(parametresForm) }}       
   </div>
  </div>
   <div class="col-md-5 border-left">
     <!-- Première partie de l'écran -->
       <h2 class="text-center">Portfolio</h2>
     
   

{% endblock %}
