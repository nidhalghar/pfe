<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title">{{ form_title|default('Create new post') }}</h5>
      </div>
      <div class="card-body">
        {{ form_start(form) }}
        <div class="form-group">
          {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
        </div>
        <div class="form-group">
          {{ form_row(form.salaire, {'attr': {'class': 'form-control', 'placeholder': 'Salaire'}}) }}
        </div>
        <div class="form-group">
          {{ form_row(form.photo,{'label': 'Image'}) }}
        </div>
        <div class="form-group">
          {{ form_row(form.date,{'label': 'Date'}) }}
        </div>
        <div class="form-group">
          {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        </div>
      </div>
      <div class="card-footer">
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_poste_index') }}" class="btn btn-secondary">Cancel</a>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>