{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Poste index{% endblock %}

{% block body %}
  <h1>Poste index</h1>

<table class="table">
  <thead>
    <tr>
      <th>titre</th>
      <th>Salaire</th>
      <th>Description</th>
      <th>affiche</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    {% for poste in postes %}
    <tr>
      <td>{{ poste.titre }}</td>
      <td>{{ poste.salaire }}</td>
      <td>{{ poste.description }}</td>
      <td>{{ poste.affiche }}</td>
      <td>
        <a href="{{ path('app_poste_show', {'id': poste.id}) }}" class="btn btn-secondary btn-sm">
          <i class="fas fa-eye"></i>
        </a>
        <a href="{{ path('app_poste_edit', {'id': poste.id}) }}" class="btn btn-primary btn-sm">
          <i class="fas fa-pencil-alt"></i>
        </a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<a href="{{ path('app_postule') }}" class="btn btn-success">
  <i class="fas fa-plus"></i> Create new
</a>

{% endblock %}
