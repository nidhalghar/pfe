{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Poste{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Poste</h1>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ poste.id }}</td>
                    </tr>
                    <tr>
                        <th>Titre</th>
                        <td>{{ poste.titre }}</td>
                    </tr>
                    <tr>
                        <th>Salaire</th>
                        <td>{{ poste.salaire }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ poste.description }}</td>
                    </tr>
                    <tr>
                        <th>Affiche</th>
                        <td>{{ poste.affiche }}</td>
                    </tr>
                </tbody>
            </table>
            <a href="{{ path('app_poste_index') }}" class="btn btn-primary">Back to list</a>
            <a href="{{ path('app_poste_edit', {'id': poste.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('poste/_delete_form.html.twig') }}
        </div>
    </div>
</div>

{% endblock %}
