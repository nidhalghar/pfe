{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Diplome index{% endblock %}

{% block body %}
    <h1>Diplome index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Montion</th>
                <th>Annee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diplome in diplomes %}
            <tr>
                
                <td>{{ diplome.montion }}</td>
                <td>{{ diplome.annee }}</td>
                <td>
                    <a href="{{ path('app_diplome_show', {'id': diplome.id}) }}">show</a>
                    <a href="{{ path('app_diplome_edit', {'id': diplome.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_education') }}">Create new</a>
{% endblock %}
