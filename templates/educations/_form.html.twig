<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">{{ form_label(form) }}</div>
        <div class="card-body">
          {{ form_start(form) }}
            <div class="form-group">
              {{ form_row(form.annee, {'attr': {'class': 'form-control', 'placeholder': 'Année'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.specialite, {'attr': {'class': 'form-control', 'placeholder': 'Spécialité'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.institue, {'attr': {'class': 'form-control', 'placeholder': 'Institut'}}) }}
            </div>
            <div class="form-group">
              <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
