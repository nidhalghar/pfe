{% extends 'base.candidat.html.twig' %}

{% block title %}Experience{% endblock %}
{% block stylesheets %} 
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
         .fixed-form {
    position: fixed;
    top: 0;
    right: 35%;
    bottom: 0;
    width: 50%;
    padding: 100px;
    overflow-y: auto;
}
</style>
{% endblock %}
{% block javascripts %}
  
{% endblock %}
{% block image %}{{asset(user.image)}}{% endblock %}
{% block body %}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-7 border-right">
      <!-- Deuxième partie de l'écran -->
      <div class="form-container fixed-form">
       <h2>Expérience</h2>
         {{ form_start(experienceForm) }}
            <div class="form-group">
              {{ form_row(experienceForm.Nomexperience, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Experience', 'id': 'nomExperience'}}) }}
           </div>
           <div class="form-group">
             {{ form_row(experienceForm.datededebut, {'attr': {'id': 'dateDebut'}}) }}
           </div>
           <div class="form-group">
             {{ form_row(experienceForm.datedefin, {'attr': {'id': 'dateFin'}}) }}
           </div>
          <div class="form-group">
             {{ form_row(experienceForm.Description, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Ecrire ici..*', 'id': 'description'}}) }}
                        <div id="mission"></div>
                         <div id="projet"></div>
                         <br>
                            <h3>Mission</h3>
                            <div class="form-group">
                               <div class="form-check form-check-inline">
                                 <input class="form-check-input" type="button" name="mission" id="missionOui" value="ajouter Mission">
                               </div>
                            </div>
                             <br>
                           <h3>Projet</h3>
                           <div class="form-group">
                             <div class="form-check form-check-inline">
                               <input class="form-check-input" type="button" name="projet" id="projetOui" value="Ajouter Project">
                              </div>
                            </div>
                        </div><br>
                                    <button type="submit" class="btn btn-lg btn-primary">Ajouter</button>
                         <div class="text-center">                    
                           {{ form_end(experienceForm) }}
                         </div>
                        </div>
                      </div>
                       <div class="col-md-5 border-left">
      <!-- Première partie de l'écran -->
         <h2 class="text-center">Portfolio</h2>
<script src="{{asset("https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js")}}"></script>
  <script>$( document ).ready(function() {
      var m=1; 
      $("#missionOui").click(function(){
        $("#mission").append (' <div class="form-group" >'+
         ' <label >Poste '+m+':</label>'+
         ' <input type="text" class="form-control" name="missions[]">'+
       ' </div>');
      });
       $("#projetOui").click(function(){
        $("#projet").append (' <div class="form-group" >'+
         ' <label >Description '+m+':</label>'+
        '<textarea name="message" rows="4" cols="40" style="width: 100%; height: 150px;">Enter your message here...</textarea>'+'<br>'+
         ' <label >Technologies '+m+':</label>'+
         ' <input type="text" class="form-control" name="projets[]">'+
       ' </div>');
      });
    });
    </script>    
    <script src="{{asset("vendor/jquery/jquery.min.js")}}"></script>
    <script src="{{asset("vendor/bootstrap/js/bootstrap.bundle.min.js")}}"></script>
    <!-- Plugin JavaScript -->
    <script src="{{asset("vendor/jquery-easing/jquery.easing.min.js")}}"></script>
    <!-- Custom scripts for this template -->
    <script src="{{asset("js/resume.min.js")}}"></script>
  
     <script src="{{asset("https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js")}}"></script>
     <script src="{{asset("https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")}}"></script>
           
{% endblock %}