<form method="post" action="{{ path('app_experiences_delete', {'id': experience.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <div class="text-center">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ experience.id) }}">
        <button class="btn btn-lg btn-danger" type="submit"><i class="fas fa-trash-alt"></i> Delete</button>
    </div>
</form>


