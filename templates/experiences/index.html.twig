{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Experience index{% endblock %}

{% block body %}
    <div class="text-center mb-4">
    <h1>Experience Index</h1>
</div>

<div class="d-flex justify-content-end mb-3">
    <a href="{{ path('app_experience') }}" class="btn btn-lg btn-primary"><i class="fas fa-plus-circle mr-2"></i>Create new</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Datededebut</th>
            <th>Datedefin</th>
            <th>Nomexperience</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for experience in experiences %}
        <tr>
            <td>{{ experience.description }}</td>
            <td>{{ experience.datededebut ? experience.datededebut|date('Y-m-d') : '' }}</td>
            <td>{{ experience.datedefin ? experience.datedefin|date('Y-m-d') : '' }}</td>
            <td>{{ experience.nomexperience }}</td>
            <td>
                <a href="{{ path('app_experiences_show', {'id': experience.id}) }}" class="btn btn-sm btn-info mr-2"><i class="fas fa-eye"></i></a>
                <a href="{{ path('app_experiences_edit', {'id': experience.id}) }}" class="btn btn-sm btn-primary mr-2"><i class="fas fa-edit"></i></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">No records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
