{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">Competences index</h1>
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-sm-6">
              <h3 class="card-title">Competences List</h3>
            </div>
            <div class="col-sm-6 text-right">
              <a class="btn btn-primary" href="{{ path('app_competence') }}"><i class="fas fa-plus"></i> Create new</a>
            </div>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table">
            <thead>
              <tr>
                <th>Technologies</th>
                <th>Niveau</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for competence in competences %}
                <tr>
                  <td>{{ competence.technologies }}</td>
                  <td>{{ competence.niveau }}</td>
                  <td>
                    <a class="btn btn-primary" href="{{ path('app_competences_show', {'id': competence.id}) }}"><i class="fas fa-eye"></i> Show</a>
                    <a class="btn btn-warning" href="{{ path('app_competences_edit', {'id': competence.id}) }}"><i class="fas fa-pencil-alt"></i> Edit</a>
                    <form method="post" action="{{ path('app_competences_delete', {'id': competence.id}) }}" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this item?');">
                      <input type="hidden" name="_method" value="DELETE">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ competence.id) }}">
                      <button class="btn btn-danger" type="submit"><i class="fas fa-trash"></i> Delete</button>
                    </form>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="3">No records found</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
