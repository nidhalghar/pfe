<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-body">
          {{ form_start(form) }}
            <div class="form-group">
              {{ form_row(form.technologies, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'les techno','onsubmit': 'afficherFormulaire(event)'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.niveau, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'niveau'}}) }}
            </div>
              <div class="form-group">
              {{ form_row(form.pourcentage, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'en %'}}) }}
            </div>
            <button class="btn btn-lg btn-primary btn-block">{{ button_label|default('Save') }}</button>
          {{ form_end(form) }}
       
        </div>
      </div>
    </div>
  </div>
</div>

