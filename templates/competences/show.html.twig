{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Competences{% endblock %}
{% block stylesheets %} 
<style>
.card-text {
  font-size: 18px;
}</style>
{% endblock %}

{% block body %}
 <div class="card">
  <div class="card-header">
    Competences {{ competence.id }}
  </div>
  <div class="card-body">
    <h5 class="card-title">{{ competence.technologies }}</h5>
    <p class="card-text {{'large-text'}}">{{ competence.niveau }}</p>
    <a href="{{ path('app_competences_index') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Back to list</a>
    <a href="{{ path('app_competences_edit', {'id': competence.id}) }}" class="btn btn-info"><i class="fa fa-edit"></i> Edit</a>
    {{ include('competences/_delete_form.html.twig') }}
  </div>
</div>

{% endblock %}
