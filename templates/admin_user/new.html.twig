{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}
{% block stylesheets %}
<style>
      body {
        background-color: #f4f4f4;
      }
      .form-container {
        max-width: 900px;
        margin: auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
      }
      .form-group {
        position: relative;
      }
      .form-group .icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 15px;
      }
      .form-group .input-group-text {
        background-color: #fff;
        border: none;
      }
      .btn-primary {
        background-color: #007bff;
        border: none;
      }
      .btn-primary:hover {
        background-color: #0069d9;
      }
      a {
        color: #007bff;
        text-decoration: none;
      }
    </style>{% endblock %}
{% block body %}
    <body>
    <div class="container">
      <div class="form-container">
        <h1 class="text-center">Create new User</h1>

        {{ include('admin_user/_form.html.twig') }}

         <div class="text-center mt-3">
            <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary mr-2">Back to list</a>
          </div>
      </div>
    </div>
  </body>
{% endblock %}
