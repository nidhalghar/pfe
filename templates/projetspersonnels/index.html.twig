{% extends 'base.certificat.html.twig' %}
{% block image %}{{asset(app.user.image)}}{% endblock %}
{% block title %}Projetspersonnel index{% endblock %}

{% block body %}
  <div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-5">Liste des Projets Personnels</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <a href="{{ path('app_projetspersonnel') }}" class="btn btn-lg btn-primary mb-3"><i class="fas fa-plus mr-2"></i> Ajouter un nouveau projet personnel</a>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Idee</th>
            <th>Duree</th>
            <th>Technologies</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for projetspersonnel in projetspersonnels %}
          <tr>
            <td>{{ projetspersonnel.id }}</td>
            <td>{{ projetspersonnel.idee }}</td>
            <td>{{ projetspersonnel.duree }}</td>
            <td>{{ projetspersonnel.technologies }}</td>
            <td>{{ projetspersonnel.description }}</td>
            <td>
              <a href="{{ path('app_projetspersonnels_show', {'id': projetspersonnel.id}) }}" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></a>
              <a href="{{ path('app_projetspersonnels_edit', {'id': projetspersonnel.id}) }}" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
              <form method="post" action="{{ path('app_projetspersonnels_delete', {'id': projetspersonnel.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce projet personnel ?')">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ projetspersonnel.id) }}">
                <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
              </form>
            </td>
          </tr>
          {% else %}
          <tr>
            <td colspan="6">Aucun projet personnel trouvé.</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% endblock %}
