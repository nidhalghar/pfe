<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">ProjetsPersonnel</h2>
          {{ form_start(form) }}
            <div class="form-group">
              {{ form_row(form.idee, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Saisir votre idée'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.duree, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Durée'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.technologies, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Technologies'}}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.description, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Description'}}) }}
            </div>
            <button class="btn btn-lg btn-primary">{{ button_label|default('Enregistrer') }}</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
